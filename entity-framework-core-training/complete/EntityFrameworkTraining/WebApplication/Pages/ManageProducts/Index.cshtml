@page
@model WebApplication.Pages.ManageProducts.IndexModel
@{
    ViewData["Title"] = "Index";
}

<h1>商品管理</h1>

<p>
    <a asp-page="Create">商品の追加</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Products[0].Desc)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Products[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Products[0].Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Products)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Desc)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.ProductId">編集</a> |
                    <a asp-page="./Details" asp-route-id="@item.ProductId">詳細</a> |
                    <a asp-page="./Delete" asp-route-id="@item.ProductId">削除</a>
                </td>
            </tr>
        }
    </tbody>
</table>


