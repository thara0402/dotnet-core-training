@page
@model WebApplication.Pages.Baskets.IndexModel
@{
    ViewData["Title"] = "Index";
}

<h2>バスケット</h2>

<p>
    <a asp-page="/Products/Index">商品一覧に戻る</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BasketItems[0].Product.Desc)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BasketItems[0].Product.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BasketItems[0].Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BasketItems[0].UnitPrice)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.BasketItems)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Product.Desc)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Product.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UnitPrice)
                </td>
                <td>
                    <a asp-page="./Delete" asp-route-id="@item.BasketItemId">削除</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<form method="post">
    <input type="submit" value="注文" class="btn btn-primary" />
</form>


